{% extends "../../partials/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Person has been removed from restricted patients" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      {{ govukPanel({
        titleText: prisoner.friendlyName + ' has been removed from restricted patients',
        classes: "govuk-!-margin-bottom-6"
      }) }}

      {{ govukButton({
        text: "Finish",
        element: 'a',
        href: '/',
        classes: "govuk-button--secondary",
        attributes: { "data-test": "restricted-patient-removal-completed-finish" }
      }) }}
    </div>
  </div>
{% endblock %}
