{% extends "../../partials/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Prisoner moved to hospital" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      {{ govukPanel({
        titleText: prisoner.friendlyName + ' has been moved to ' + hospital.description,
        classes: "govuk-!-margin-bottom-6"
      }) }}

      <div data-test="prisoner-move-completed-help-text">
        <p class="govuk-body">{{ prisoner.friendlyName | possessive }} prison number is {{ prisoner.prisonerNumber }}.</p>
        <p class="govuk-body">All of their activities, appointments and visits have been cancelled.</p>
      </div>

      {{ govukButton({
        text: "Finish",
        element: 'a',
        href: '/',
        classes: "govuk-button--secondary",
        attributes: { "data-test": "prisoner-move-completed-finish" }
      }) }}
    </div>
  </div>
{% endblock %}
