<form method="POST" novalidate="novalidate" data-test="prisoner-search-form">
  <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

  <div class="horizontal-form govuk-!-margin-bottom-6">
    {{ govukInput({
      id: "searchTerm",
      name: "searchTerm",
      value: searchTerm,
      label: {
          html: "Enter a prisonerâ€™s name or number"
      },
      classes: "govuk-!-width-full",
      attributes: {
        'data-test': "prisoner-search-term-input"
      },
      errorMessage: errors | findError("searchTerm")

    }) }}

    {{ govukButton({
      text: "Search",
      type: "submit",
      classes: "govuk-button--secondary",
      attributes: { "data-test": "prisoner-search-submit" }
    }) }}
  </div>
</form>